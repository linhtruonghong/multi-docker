{
	"ASWEBDockerrunVersion": 2,
	"containerDefinitions": [
		{
			"name": "client",
			"image": "hoacaphe/multi-client",
			"hostname": "client",
			"essential": false,
			"memory": 128
		},
		{
			"name": "server",
			"image": "hoacaphe/multi-server",
			"hostname": "api",
			"essential": false,
			"memory": 128
		},
		{
			"name": "worker",
			"image": "hoacaphe/multi-worker",
			"hostname": "worker",
			"essential": false,
			"memory": 128
		},
		{
			"name": "nginx",
			"image": "hoacaphe/multi-nginx",
			"hostname": "nginx",
			"essential": true,
			"portMappings": [
				{
					"hostPort": 80,
					"containerPort": 80
				}
			],
			"links": ["server", "client"],
			"memory": 128
		}
	]
}